html
include static/includes/header
body
    div#container
        div#darker-background
            h1#igenyfelmeres_h1 Magori computers - SmartHome Igényfelmérő kalkulátor
            div#igenyfelmero-container
                div#igenyfelmeres-records-container
                    if igenyfelmeres_records
                        each if_record in igenyfelmeres_records
                            a.igenyfelmeres-record=if_record.name
                table
                    tr
                        th poz
                        th name
                        th location
                        th description
                        th function
                        th device
                        th brand
                        th piece
                        th price

                    if lines_for_active_ifmero
                        each line in lines_for_active_ifmero
                            tr
                                td.ifl-id.hide= line._id
                                td 0
                                td.ifl-name= line.name
                                td.ifl-location-name
                                    select#location-options
                                        if locations
                                            each location in locations
                                                if line.location.id == location._id
                                                    option(value=location.id selected=true).location-option #{location.name}
                                                else
                                                    option(value=location._id).location-option #{location.name}


                                td.ifl-description= line.description
                                td.ifl-function-name
                                    select#function-options
                                        if functions
                                            each functionr in functions
                                                if line.function.id == functionr._id
                                                    option(value=functionr._id selected=true) #{functionr.name}
                                                else
                                                    option(value=functionr._id) #{functionr.name}
                                td.ifl-device-name
                                    select#device-options
                                        if devices
                                            each device in devices
                                                if line.device.id == device._id
                                                    option(value=device._id selected=true) #{device.name}
                                                else
                                                    option(value=device._id) #{device.name}
                                td.ifl-brand-name
                                    select#brand-options
                                        if brands
                                            each brand in brands
                                                if line.brand.id == brand._id
                                                    option(value=brand._id selected=true) #{brand.name}
                                                else
                                                    option(value=brand._id) #{brand.name}
                                td.ifl-piece= line.piece
                                td.ifl-price= line.price




script(type="module" src='/static/js/igenyfelmero.js')
include static/includes/footer.pug